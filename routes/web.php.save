Route::get('/', function(){
    if(auth()->user()->role_id == 2){
        return redirect(route('owner.dashboard'));
    }else{
        return redirect(route('dashboard'));
    }
    return redirect(route('login'));
})->name('home');

Route::middleware('guest')->group(function () {
cd    Route::get('owner/login', OwnerLogin::class)
        ->name('owner.login');

    Route::get('owner/register', OwnerRegister::class)
        ->name('owner.register');

    Route::get('login', CustomerLogin::class)
        ->name('login');

    Route::get('register', CustomerRegister::class)
        ->name('register');

});

Route::get('password/reset', Email::class)
    ->name('password.request');

Route::get('password/reset/{token}', Reset::class)
    ->name('password.reset');

Route::middleware('auth')->group(function () {
    Route::get('email/verify', Verify::class)
        ->middleware('throttle:6,1')
        ->name('verification.notice');

    Route::get('password/confirm', Confirm::class)
        ->name('password.confirm');
});

Route::middleware('auth')->group(function () {
    Route::get('email/verify/{id}/{hash}', EmailVerificationController::class)
        ->middleware('signed')
        ->name('verification.verify');

    Route::post('logout', LogoutController::class)
        ->name('logout');


    Route::group([
        'prefix' => 'owner',
        'middleware' => 'owner',
        'as' => 'owner.',
    ], function(){
        Route::get('dashboard', [OwnerDashboardController::class, 'index'])->name('dashboard');
        Route::get('claim', [ClaimController::class, 'index'])->name('claim');
        Route::get('promo', [PromoController::class, 'index'])->name('promo');
        Route::get('dashboard', [OwnerDashboardController::class, 'index'])->name('dashboard');
        Route::group([
            'middleware' => 'admin_store',
        ], function(){
        Route::get('point', [PointController::class, 'index'])->name('point');
        
        });
        Route::group([
            'middleware' => 'bussiness_owner',
        ], function(){
            Route::get('store', [StoreController::class, 'index'])->name('store');
        });
    });

    Route::group([
        'middleware' => 'customer',
    ], function(){
        Route::get('dashboard', [CustomerDashboardController::class, 'index'])->name('dashboard');
        Route::get('profile', [ProfileController::class, 'index'])->name('profile');
        Route::get('point', [CustomerPointController::class, 'index'])->name('point');
        Route::get('merchant', [MerchantController::class, 'index'])->name('merchant');
        Route::get('promo', [CustomerPromoController::class, 'index'])->name('promo');
        Route::get('claim', [CustomerClaimController::class, 'index'])->name('claim');
    });


});


